{
  "name": "iron-manager",
  "version": "1.4.3",
  "description": "Bot for distributing and managing IRON for the 1st Colonial Helldiver Regiment",
  "main": "start",
  "scripts": {
    "build": "tsc",
    "prod": "node ./dist/main.js",
    "dev": "npx nodemon --legacy-watch --watch src --ext ts src/main.ts",
    "clear-commands": "tsc && node -r dotenv/config ./dist/clear-commands.js",
    "test": "echo \"Error: no test specified\" && exit 1",

    "docker-dev-build": "docker compose build",
    "docker-dev-run": "docker compose up --build",
    "docker-dev-clear-commands": "",
    "docker-prod-build": "docker compose -f docker-compose.yml build",
    "docker-prod-run": "docker compose -f docker-compose.yml up --build --detach",
    "docker-prod-clear-commands": "",
    "docker-stop": "docker compose down",
    "docker-config-edit": "docker run --rm -it -v iron-bot-storage:/data alpine sh -c 'apk add nano && nano /data/config.json'"
  },
  "author": "HoeenHero",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.17.2",
    "luxon": "^3.5.0",
    "roman-numerals": "^0.3.2"
  },
  "devDependencies": {
    "@types/luxon": "^3.4.2",
    "@types/roman-numerals": "^0.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
